require "hemingway/special/special"

module Hemingway
  grammar Special

    # Special characters that need to be escaped in Latex. 
    # Example: War \& Peace
    rule special
      escape character:( "#" / "$" / "%" / "&" / "_" / "{" / "}" ) <SpecialNode>
    end

    rule escape
      "\\"
    end

  end
end